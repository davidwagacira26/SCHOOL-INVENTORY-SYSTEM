<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Low Stocks</title>
    <link rel="stylesheet" href="stylesheets/admin/lowstocks.css">
</head>
<body>
    <header>
        <h1>Low Stocks</h1>
    </header>
    <main>
        <section class="inventory-list">
            <h2>Inventory Items</h2>
            <table>
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody id="inventory-table-body">
                    <% lowStockItems.forEach(item => { %>
                        <tr <% if (item.item_quantity == 0) { %>class="out-of-stock"<% } %>>
                            <td><%= item.item_name %></td>
                            <td><%= item.item_quantity %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    </main>
    <script src="/socket.io/socket.io.js"></script>
    <script src="javascripts/lowstock.js"></script>
</body>
</html>
